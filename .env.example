# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-ec2-ip-here,your-domain.com

# Database Configuration (PostgreSQL on RDS)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=blogdb
DATABASE_USER=bloguser
DATABASE_PASSWORD=your-secure-password-here
DATABASE_HOST=your-rds-endpoint.rds.amazonaws.com
DATABASE_PORT=5432

# Optional: Or use DATABASE_URL format (if using django-environ or dj-database-url)
# DATABASE_URL=postgresql://bloguser:password@your-rds-endpoint:5432/blogdb

# Static & Media Files
STATIC_ROOT=/home/ubuntu/first-django-app/staticfiles
STATIC_URL=/static/
MEDIA_ROOT=/home/ubuntu/first-django-app/media
MEDIA_URL=/media/

