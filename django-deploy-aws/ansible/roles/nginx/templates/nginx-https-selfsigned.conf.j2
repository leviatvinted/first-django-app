# HTTPS configuration with self-signed certificate (testing)
# HTTP redirect
server {
    listen 80;
    server_name {{ allowed_hosts | join(' ') }};
    return 301 https://$server_name$request_uri;
}

# HTTPS configuration (self-signed)
server {
    listen 443 ssl http2;
    server_name {{ allowed_hosts | join(' ') }};

    ssl_certificate /etc/ssl/selfsigned.crt;
    ssl_certificate_key /etc/ssl/selfsigned.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Max upload size and general settings
    client_max_body_size 20M;

    location /static/ {
        alias {{ static_root }}/;
        expires 30d;
        access_log off;
    }

    location /media/ {
        alias {{ media_root }}/;
        expires 30d;
        access_log off;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:{{ gunicorn_socket }};
    }
}
